<h1>Survey</h1>

<p><%= link_to 'Create Survey', new_survey_path(:company_id => @company.id) %></p>
<br>

<table>
  <thead>
    <tr>
      <th>Index</th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
    <tr>
      <td><%= survey.title %></td>
      <% if survey.complete_flag %>
      <td><%= link_to 'Show Survey(You cannot edit)', survey_questions_path(survey) %></td>
      <td><%= link_to 'Delete(Include answers)', delete_all_path(:id => survey.id), method: :delete %></td>
      <% else %>
      <td><%= link_to 'Show Survey(You can edit)', survey_path(survey) %></td>
    <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to 'Back', company_path(@company) %></p>
