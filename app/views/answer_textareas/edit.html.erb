<h1>Edit Answer</h1>

<% if @answer_textarea.errors.any? %>
<h3><%= @answer_textarea.errors.count %> errors has been found.</h3>
<ul>
  <% @answer_textarea.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
  <% end %>
</ul>

<%= form_with(model: [@survey,@answer_textarea], local: true) do |form| %>
    <%= @textarea.subject %>
    <%= form.text_field :content %>
      <%= form.submit %>
<% end %>
<%= link_to 'Back', verify_path(:id => @survey.id) %>
